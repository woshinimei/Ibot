<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    >

    <com.infomax.ibotncloudplayer.growthalbum.view.SquareImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="2dp"
        />

    <com.infomax.ibotncloudplayer.growthalbum.view.LabelTextView
        android:id="@+id/tv_label"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/iv_photo"
        android:layout_alignBottom="@+id/iv_photo"
        android:gravity="center"
        android:text="@string/labeled"
        android:textSize="12sp"
        android:textColor="@color/transparent_white"
        android:background="#BB000000"/>

    <View
        android:id="@+id/mask"
        android:visibility="gone"
        android:background="#88000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/checkmark"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_select_selector"/>


</RelativeLayout>

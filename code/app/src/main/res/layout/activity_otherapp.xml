<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:background="@drawable/chinese_anim_top">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/btn_back"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/icon_list_other_app"
            android:textColor="#ffffff"
            android:textSize="44sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_brower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="7dp"
            android:drawableTop="@drawable/otherapp_icon_web"
            android:gravity="center"
            android:text="网页浏览"
            android:textColor="#2f7fbd"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_extralcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="7dp"
            android:drawableTop="@drawable/otherapp_waizhi"
            android:gravity="center"
            android:text="外置卡"
            android:textColor="#2f7fbd"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="7dp"
            android:drawableTop="@drawable/otherapp_help"
            android:gravity="center"
            android:text="帮助"
            android:textColor="#2f7fbd"
            android:textSize="25sp" />
    </LinearLayout>
</LinearLayout>
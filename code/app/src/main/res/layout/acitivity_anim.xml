<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_bg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chinese_anim_top">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/btn_back"
            android:padding="10dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_english_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_english_anim"
                android:gravity="center_horizontal"
                android:text="英语动画"
                android:textColor="#8676a6"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_chinese_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_chinese_anim"
                android:gravity="center_horizontal"
                android:text="汉语动画"
                android:textColor="#8676a6"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/tv_tradtional_culture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_list_tradition_culture"
                android:gravity="center_horizontal"
                android:text="传统文化"
                android:textColor="#8676a6"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
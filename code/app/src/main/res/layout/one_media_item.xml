<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="320dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:background="@drawable/album_item_bg2">


        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/album_item_num_btn"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="11dp"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:text="00:00"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/image_overlay"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true" />

    <CheckBox
        android:id="@+id/chk"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:background="@drawable/album_check_btn"
        android:button="@null"
        android:clickable="false"
        android:focusable="false"
        android:padding="10dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_video_play"
        android:layout_width="@dimen/play_video_button_size"
        android:layout_height="@dimen/play_video_button_size"
        android:layout_centerInParent="true"
        android:src="@drawable/video_play_button_selector"
        android:visibility="gone" />

</RelativeLayout>